pipeline {
    agent {
        label AGENT_1
    }
    environment {
        appVersion = ''
        ACC_ID = "557690617909"
        REGION = "us-east-1"
        PROJECT = "roboshop"
    }
    options{
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    stages {
        stage('init'){
            steps{
                script{
                    withAWS(credentials: 'aws-creds', region: 'us-east-1'){
                        sh """
                            cd 20-bastion
                            terraform init -reconfigure
                        """
                    }
                }
            }
        }
        stage('plan'){
            steps{
                script{
                    withAWS(credentials: 'aws-creds', region: 'us-east-1'){
                        sh """
                            cd 20-bastion
                            terraform plan
                        """
                    }
                }
            }
        }
        stage('apply'){
            steps{
                script{
                    withAWS(credentials: 'aws-creds', region: 'us-east-1'){
                        sh """
                            cd 20-bastion
                            terraform apply -auto-approve
                        """
                    }
                }
            }
        }
    }
   post {
        always {
            echo 'I will always say Hello again!'
            deleteDir()
        }
        success {
            echo 'Hello Success'
        }
        failure { 
            echo 'Hello Failure'
        }
    }
}